<div class="sign_up_page">
<div class="sign_up_header">
    <h2 class="left_275">Sign up</h2>
  </div>

<%= form_for(resource, :as => resource_name, :url => registration_path(resource_name)) do |f| %>
  <%= devise_error_messages! %>
  
  <div class="sign_up_form large-6 push-3">
    
<div class="large-9 columns left left_50px"><br />
  <%= f.email_field :email, :placeholder => "Email address", :class => "sign_up_input" %></div>

  <div class="large-9 columns left left_50px"><br />
  <%= f.password_field :password, :placeholder => "Password", :class => "sign_up_input" %></div>
  
  <div class="large-9 columns left left_50px"><br />
  <%= f.password_field :password_confirmation, :placeholder => "Confirm Password", :class => "sign_up_input" %></div>


  <div class="large-9 columns left left_50px push-1 "><br />
  <%= f.collection_select :role, User::ROLES, :to_s, :humanize %></div>


<div class="large-7 left"><%= f.submit "Sign up", :class => "medium button success radius large-8 push-6" %></div>
<% end %>

<div class="large-8 left">

<%= render "links" %> </div>
</div>

<div class="large-7 left push-5">
<%= render "social_links" %></div>