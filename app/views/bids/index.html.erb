<h1>Listing bids</h1>

<table>
  <tr>
    <th>User</th>
    <th>Buy</th>
    <th>Lease</th>
    <th>Finance</th>
    <th>Monthly payment</th>
    <th>Down payment</th>
    <th>No of month</th>
    <th>Comment</th>
    <th>Save</th>
    <th>Max miles</th>
    <th>Bid time</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @bids.each do |bid| %>
  <tr>
    <td><%= bid.user_id %></td>
    <td><%= bid.buy %></td>
    <td><%= bid.lease %></td>
    <td><%= bid.finance %></td>
    <td><%= bid.monthly_payment %></td>
    <td><%= bid.down_payment %></td>
    <td><%= bid.no_of_month %></td>
    <td><%= bid.comment %></td>
    <td><%= bid.save %></td>
    <td><%= bid.max_miles %></td>
    <td><%= bid.bid_time %></td>
    <td><%= link_to 'Show', bid %></td>
    <td><%= link_to 'Edit', edit_bid_path(bid) %></td>
    <td><%= link_to 'Destroy', bid, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

<br />

